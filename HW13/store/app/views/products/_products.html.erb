<% @products.each do |product| %>
  <%= link_to product, class: "p-0 m t-3 col-12 col-sm-6 col-md-4 col-lg-3" do %>
    <div class="card shadow-sm">
    <%= image_tag (product.image), class: 'card-img-top', alt: product.name %>
      <div class="card-body px">
        <h5 class="card-title text-center"><%= product.name %></h5>
        <p class="card-text"><%= product.description %></p>
        <div class="d-flex card-footer">
          <%= button_to "Add to cart", line_items_path(product_id: product.id), class: "btn btn-primary add-to-cart" %>
          <p class="card-price mt-auto text-end"><%= number_to_currency(product.price) %></p>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
