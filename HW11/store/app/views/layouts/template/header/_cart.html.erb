  </div>
  <div class="offcanvas-body">
    <ul class="list-unstyled table tab le-dark tab le-striped cart-list">
      <li>
          Cart is empty
      </li>
    </ul>
    <%= link_to 'Cart page', current_cart, class: "btn btn-secondary" %>
